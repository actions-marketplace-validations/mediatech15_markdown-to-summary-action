{
  "compilerOptions": {
    "alwaysStrict": true,
    "target": "ES6",
    "module": "ES2022",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "newLine": "lf"
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "dist"
  ]
}